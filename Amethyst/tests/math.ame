namespace test;

#test
void test_add() {
    start("int add");

    int x = 5;
    int y = x + 70;

    assert_eq(y, 75);

    complete();
}

#test
void test_sub() {
    start("int sub");

    int x = 5;
    int y = 70 - x;

    assert_eq(y, 65);
    
    complete();
}

#test
void test_mul() {
    start("int mul");

    int x = 5;
    int y = 6 * x;

    assert_eq(y, 30);
    
    complete();
}

#test
void test_div() {
    start("int div");

    int x = 100;
    int y = x / 4;

    assert_eq(y, 25);
    
    complete();
}

#test
void test_mod() {
    start("int mod");

    int x = 8;
    int y = x % 7;

    assert_eq(y, 1);
    
    complete();
}

#test
void test_big_math() {
    start("int big math");

    int a = 4;
    int b = 2;
    int c = 10;
    int d = -3;

    int ret = a + b - 10 * c / d + 80 - a * b;
    assert_eq(ret, 112); // I think scoreboard division floors while C truncates
    
    complete();
}

#test
void test_assign_math() {
    start("int assign math");

    int x = 5;

    x += 10;
    assert_eq(x, 15);

    x -= 12;
    assert_eq(x, 3);

    x *= -6;
    assert_eq(x, -18);

    x /= 2;
    assert_eq(x, -9);
    
    complete();
}

#test
void test_inc() {
    start("int increment");

    int x = 5;
    assert_eq(++x, 6);
    
    complete();
}

#test
void test_dec() {
    start("int decrement");

    int x = -5;
    assert_eq(--x, -6);
    
    complete();
}

#test
void test_negate() {
    start("int negate");

    int x = 5;
    assert_eq(-x, -5);

    x = -9;
    assert_eq(-x, 9);
    
    complete();
}
