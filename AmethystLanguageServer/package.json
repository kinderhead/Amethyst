{
  "name": "amethyst-language",
  "displayName": "Amethyst Language Support",
  "description": "Syntax highlighting for the Amethyst programming language",
  "version": "0.1.9",
  "publisher": "kinderhead",
  "repository": {
    "type": "git",
    "url": "https://github.com/kinderhead/Amethyst"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "amethyst",
        "aliases": [
          "Amethyst",
          "amethyst"
        ],
        "extensions": [
          ".ame"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "amethyst",
        "scopeName": "source.ame",
        "path": "./syntaxes/amethyst.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@vscode/vsce": "^3.7.1"
  },
  "scripts": {
    "build": "npx vsce package",
    "publish": "npx vsce publish"
  }
}
